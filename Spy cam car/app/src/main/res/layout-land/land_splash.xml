<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a344c"

    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logo1"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:background="@drawable/logo2"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="113dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:background="@drawable/logo3"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:background="@drawable/logo4"
        android:padding="10sp"
        android:text="Spy Cam Car"
        android:textAlignment="center"
        android:textColor="#1a344c"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="176dp"
        android:textStyle="italic|bold"

        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_star_border_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/textView6"
        android:background="@drawable/ic_star_border_black_24dp"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"

        android:layout_alignBottom="@+id/textView7"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/textView7"
        android:background="@drawable/ic_star_border_black_24dp"
        android:id="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="11dp"
        android:background="@drawable/ic_videocam_black_24dp"
        android:textAlignment="center"
        android:textColor="#1a344c"
        android:textSize="12sp"
        android:textStyle="italic" />
</RelativeLayout>